<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="media">
          <div class="media=left">
            <h2 class="pull-left"><i class="fa fa-fw fa-lg fa-film"></i>&nbsp;</h2>
          </div>
          <div class="media-body">
            <h2 style="margin-bottom: 0;"><%= video.name %></h2>
            <p>
            <span class="text-muted"><i class="fa fa-fw fa-clock-o"></i> Added <time class="timeago" datetime="<%= video.created.toISOString() %>"><%= video.created.toDateString() %></time></span>
            <p/>
            <a class="text-muted" href="<%= video.url %>"><i class="fa fa-lg fa-fw fa-download"></i> <%= video.url %></a>
          </div>
        </div>
        <hr/>
        <div class="row">
          <div class="col-md-5 col-md-push-7 col-lg-push-7">
            <video controls src="<%= video.url %>" style="width: 100%;"></video>
          </div>
          <div class="col-md-7 col-md-pull-5 col-lg-pull-5">
            <div class="form-group lead">
              <label class="control-label">Description</label>
              <% video.description.split("\n").forEach(function(line, i) { %>
                <p><%= line %></p>
              <% }); %>
              <% if (video.description.trim() == '') { %>
                <p class="text-muted lead">There is no description for this video</p>
              <% } %>
            </div>
            <div class="form-group lead">
              <label class="control-label">Tags</label>
              <br/>
              <% if (video.tags.length == 0) { %>
                <p class="text-muted lead">There are no tags for this video</p>
              <% } %>
              <% video.tags.forEach(function(tag, i) { %>
                <span class="tag label label-info"><i class="fa fa-tag"></i> <%= tag %></span>
              <% }); %>
            </div>
          </div>
        </div>
        <div class="form-group text-right">
          <br/>
          <a class="btn btn-lg btn-default" href="<%= video.url %>"><i class="fa fa-lg fa-fw fa-download"></i> Download</a>
          <a href="/videos/edit/<%= video.id %>" class="btn btn-lg btn-primary"><i class="fa fa-fw fa-pencil"></i> Edit</a>
        </div>
      </div>
    </div>
  </div>
</div>